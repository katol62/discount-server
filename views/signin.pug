extends layout

block content

    div.container

        div.row
            div.col-lg-12.login-form-pre

            div.col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-12
                form(method='post' action='')
                    .form-group
                        label(for='email') #{dict.labels.email_address}
                        input#email.form-control(type='email', name='email', placeholder='Email')
                    .form-group
                        label(for='password') #{dict.labels.password}
                        input#password.form-control(type='password', name='password', placeholder='Password')

                    button.btn.btn-default(type='submit') #{dict.labels.enter}

            div.col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-12.login-form-pre
                if errors
                    ul.error
                        for error in errors
                            li!= error.msg
